@using PagedList.Mvc;
@using NguyenQuocNhut_SachOnline.Models
@using PagedList;
@model PagedList.IPagedList<SACH>
@{
    ViewBag.Title = "Sách theo chủ đề phân trang";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<style type="text/css">
    .imgbook {
        transition: all 1s ease-in;
        width: 400px;
    }

        .imgbook:hover {
            transform: scale(0.9);
            cursor: pointer;
        }
</style>



<h2 class="text-center">SÁCH THEO CHỦ ĐỀ </h2>
<hr>
<div class="row text-center">

    @foreach (var sach in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="thumbnail">
                <img src="~/Images/@sach.AnhBia" alt="@sach.TenSach" class="img- responsive img-rounded imgbook" style="width:400px;">
                <div class=" caption">
                    <h4 style="min-height:70px;">
                        <a href="@Url.Action("ChiTietSach", "SachOnline", new { id = sach.MaSach })">
                            @sach.TenSach
                        </a>
                    </h4>
                    <p>
                        <a href="@Url.Action("ThemGioHang","GioHang", new { ms = sach.MaSach, url =
Request.Url.ToString() })" class="btn btn-primary" role="button">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Add to Cart
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>

