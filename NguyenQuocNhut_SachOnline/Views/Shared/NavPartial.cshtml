@model IEnumerable<NguyenQuocNhut_SachOnline.Models.MENU>
<div class="container">



    <ul class="nav navbar-nav">
        @{
            int i = 0;
            foreach (var item in Model)
            {
                if (ViewBag.lst[i] != 0)
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle"
                           data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">
                            @item.MenuName<span class="caret"></span>
                        </a>
                        @Html.Action("LoadChildMenu", "SachOnline", new { parentId = item.Id })
                    </li>
                }
                else
                {
                    if (item.MenuLink.Contains("://"))
                    {
                        <li><a href="@item.MenuLink">@item.MenuName</a></li>
                    }
                    else
                    {
                        <li><a href="~/@item.MenuLink">@item.MenuName</a></li>
                    }
                }

                i++;
            }

        }

    </ul>
    @{ var customer = Session["TaiKhoan"] as NguyenQuocNhut_SachOnline.Models.KHACHHANG; }
    <div class="collapse navbar-collapse" id="navbar1">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                @if (customer == null)
                {

                    <ul class="nav navbar-nav">
                        <li class="active"><a href="@Url.Action("DangKy", "User")">Đăng ký</a> </li>
                        <li class="active"><a href="@Url.Action("DangNhap", "User")">Đăng nhập</a> </li>
                        <li class="active"> <a href="@Url.Action("Login", "Home", new { area = "Admin" })">Đăng nhập admin</a> </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="/">Xin Chào : @customer.HoTen</a> </li>
                        <li class="active"><a href="@Url.Action("Logout", "User")">Đăng xuất</a> </li>

                    </ul>
                }


            </li>

            <li style=" margin-top: -16px;">

                @Html.Action("GioHangPartial", "GioHang")"
            </li>
        </ul>
        <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Tìm kiếm">
            </div>
            <button type="submit" class="btn btn-default">Tìm</button>
        </form>
    </div>
    <!--Tìm kiếm-->
</div>
<!--End-Phần tìm kiếm-->

<style>
    .dropdown-submenu {
        position: relative;
    }

        .dropdown-submenu .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -1px;
        }
</style>

<script>
    $(document).ready(function (){
        $('.dropdown-submenu a.test').on("click", function (e) {
            $(this).next('ul').toggle();
            e.stopPropagation();
            e.preventDefault();
        });
    });
</script>


