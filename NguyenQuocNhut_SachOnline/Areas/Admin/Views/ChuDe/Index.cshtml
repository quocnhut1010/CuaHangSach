@model PagedList.PagedList<NguyenQuocNhut_SachOnline.Models.CHUDE>
@using NguyenQuocNhut_SachOnline.Models
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    <button class="btn btn-success" id="btnAdd">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Thêm Chủ Đề
    </button>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="col-ms 9">
                Tên Chủ Đề
            </th>
            <th class="col-ms 9" style="text-align:right">
                Các Chức Năng
            </th>
        </tr>
    </thead>
    <tbody id="tblDsChuDe">
    </tbody>
</table>
<div class="modal fade" id="modalChuDe" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenter Title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="panel panel-primary">
                <div class="panel-heading" id="modalTitle"></div>
                <div class="panel-body">
                    <div class="form-group">
                        <input type="text" id="maCD" value="" hidden />
                        <label>Tên chủ đề </label>
                        <input type="text" class="form-control" id="txtTenChuDe" placeholder-"Tên chủ đề" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSubmit">Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>







@*@section script{*@
<script>

    $(document).ready(function () {
        LoadDsChuDe();
    });

    function LoadDsChuDe() {
        $.ajax({
            url: '/Admin/ChuDe/DsChuDe',
            type: 'get',
            success: function (data) {
                if (data.code === 200) {
                    $('#tblDsChuDe').empty();
                    $.each(data.dsCD, function (k, v) {
                        let s = '<tr id="' + v.MaCD + '">';
                        s += '<td class="col-ms-9">' + v.TenCD + '</td>';
                        s += '<td class="col-ms-3 text-right">';
                        s += '<button class="btn btn-sm btn-info" name="view"><i class="fa fa-info-circle" aria-hidden="true"></i></button>&nbsp;';
                        s += '<button class="btn btn-sm btn-warning" name="update"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>&nbsp;';
                        s += '<button class="btn btn-sm btn-danger" name="delete"><i class="fa fa-trash" aria-hidden="true"></i></button>&nbsp;';
                        s += '</td>';
                        s += '</tr>';
                        $('#tblDsChuDe').append(s);
                    });
                }
            },
            error: function (xhr, status, error) {
                console.error(error); // Log any potential errors in the console
            }
        });
    }

</script>
<script>
    // View Details Function
    $(document).on('click', "button[name='view']", function () {
        let idCD = $(this).closest('tr').attr('id');

        $.ajax({
            url: '/Admin/ChuDe/Detail',
            type: 'get',
            data: { maCD: idCD },
            success: function (data) {
                if (data.code === 200) {
                    $('#txtTenChuDe').val(data.cd.TenChuDe);
                    $('#txtTenChuDe').prop('readonly', true);
                    $('#btnSubmit').hide();
                    $('#modalTitle').text('Xem chi tiết Chủ đề');
                    $('#modalChuDe').modal();
                } else {
                    alert(data.msg);
                }
            }
        });
    });

    // Add New Topic Function
    $('#btnAdd').click(function () {
        $('#modalTitle').text('Thêm mới Chủ đề');
        $('#maCD').val(0); // Set the maCD value to 0 for adding a new topic
        $('#txtTenChuDe').val('');
        $('#txtTenChuDe').prop('readonly', false);
        $('#btnSubmit').show();
        $('#modalChuDe').modal();
    });



    // Save New Topic Function
    $(document).on('click', '#btnSubmit', function () {
        let idCD = $('#maCD').val();
        let updatedName = $('#txtTenChuDe').val();
        let url = (idCD === '0') ? '/Admin/ChuDe/AddChuDe' : '/Admin/ChuDe/Update';

        $.ajax({
            url: url,
            type: 'post',
            data: { maCD: idCD, strTenCD: updatedName },
            success: function (data) {
                if (data.code === 200) {
                    alert("Chủ đề được thêm mới thành công!");
                    $('#modalChuDe').modal('hide');
                    LoadDsChuDe(); // Refresh the list of topics after an update
                } else {
                    alert("Lỗi: " + data.msg);
                }
            },
            error: function (xhr, status, error) {
                console.error(error); // Log any potential errors in the console
            }
        });
    });


    // Update Topic Function
    $(document).on('click', "button[name='update']", function () {
        let idCD = $(this).closest('tr').attr('id');

        $.ajax({
            url: '/Admin/ChuDe/Detail',
            type: 'get',
            data: { maCD: idCD },
            success: function (data) {
                if (data.code === 200) {
                    $('#txtTenChuDe').val(data.cd.TenChuDe);
                    $('#txtTenChuDe').prop('readonly', false);
                    $('#btnSubmit').show();
                    $('#modalTitle').text('Cập nhật Chủ đề');
                    $('#maCD').val(idCD);
                    $('#modalChuDe').modal();
                } else {
                    alert(data.msg);
                }
            }
        });
    });

    // Delete Topic Function
    $(document).on('click', "button[name='delete']", function () {
        let idCD = $(this).closest('tr').attr('id');

        if (confirm('Bạn thực sự muốn xóa Chủ đề này.')) {
            $.ajax({
                url: '/Admin/ChuDe/Delete',
                type: 'post',
                data: { maCD: idCD },
                success: function (data) {
                    if (data.code === 200) {
                        alert(data.msg);
                        LoadDsChuDe();
                    } else {
                        alert(data.msg);
                    }
                }
            });
        }
    });



</script>

