@model IEnumerable<NguyenQuocNhut_SachOnline.Models.TRANGTIN>
@using System.Text.RegularExpressions
@helper Truncate(string s, int length)

{
    if (s.Length <= length)
    {
        @Html.Raw(s)
    }
    else
    {
        var truncatedString = s.Substring(0, length);
        var closingTags = Regex.Matches(truncatedString, @"<[^>]+>").Count;
        if (closingTags > 0)
        {
            var regex = new Regex("(</[a-zA-Z]+>)");
            var matches = regex.Matches(truncatedString);
            var closingTagCounter = 0;

            foreach (Match match in matches)
            {
                if (closingTagCounter == closingTags - 1)
                {
                    truncatedString = truncatedString.Substring(0, match.Index + match.Length);
                    break;
                }
                closingTagCounter++;
            }
        }

        @Html.Raw(truncatedString)<text>...</text>
    }
}
