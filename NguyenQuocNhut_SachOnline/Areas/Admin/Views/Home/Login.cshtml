
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/Admin/css")
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #f5f5f5;
            font-family: Arial, sans-serif;
           background-color:deepskyblue;
        }

        .box {
            width: 400px;
            margin: 100px auto;
            background: #fff;
            border-radius: 5px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            background-color:aquamarine;
        }

            .box h4 {
                text-align: center;
                font-weight: bold;
                margin: 0 0 15px;
                padding: 10px;
                background: #2196F3;
                color: #fff;
                border-radius: 5px 5px 0 0;
            }

        .boxBody {
            padding: 20px;
        }

        .box label {
            
            display: block;
            margin-bottom: 10px;
        }

        .box input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
            box-sizing: border-box;
        }

            .box input[type="checkbox"] {
                
                margin-top: 10px;
            }

        .box .rLink {
            margin-left: 10px;
            font-size: 12px;
            color: #2196F3;
            text-decoration: none;
        }

        .box footer {
            display: flex; /* Display child elements on the same line */
            justify-content: space-between; /* Align child elements with space between them */
            align-items: center; /* Vertically center the elements */
            padding: 10px 0;
            background: #f1f1f1;
            background-color:aquamarine;
            border-radius: 0 0 5px 5px;
        }

        .box .btnLogin {
            width:120px;
            height:70px;
            margin-right:20px;            
            background: #2196F3;
            color: #fff;
            border: none;
            padding: 0 0 5px 5px;
            border-radius: 20px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <form action="~/Admin/Home/Login" method="post" class="box login">
        <fieldset class="boxBody">
            <h4 style="text-align:center;font-weight:bold">LOGIN ADMIN</h4>
            <label>Username</label>
            <input type="text" tabindex="1" name="UserName" placeholder="Type your
username" required>
            <label>
                Password                
                <a href="#" class="rLink" tabindex="5" style="margin-left:150px">
                    Forget your password?
                </a>
            </label>
            <input type="password" tabindex="2" name="Password" placeholder="Type your
password" required>
            <p style="font-style:italic; color:red; margin:0px;">@ViewBag.ThongBao</p>
        </fieldset>
        <footer>
            <label style="text-align:center">Keep me logged in<input type="checkbox" tabindex="3"></label>
            <input type="submit" class="btnLogin" value="Login" tabindex="4">
        </footer>
    </form>
</body>
</html>
